<p id="notice"><%= notice %></p>

<h1>Scenes</h1>

<table>
  <thead>
    <tr>
      <th>Scene text</th>
      <th>Left text</th>
      <th>Left</th>
      <th>Right text</th>
      <th>Right</th>
      <th>Previous ID:</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @scenes.each do |scene| %>
      <tr>
        <td><%= scene.scene_text %></td>
        <td><%= scene.left_text %></td>
        <td><%= scene.left_id %></td>
        <td><%= scene.right_text %></td>
        <td><%= scene.right_id %></td>
        <td><%= scene.prev_id %></td>
        <td><%= link_to 'Show', scene %></td>
        <td><%= link_to 'Edit', edit_scene_path(scene) %></td>
        <td><%= link_to 'Destroy', scene, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

